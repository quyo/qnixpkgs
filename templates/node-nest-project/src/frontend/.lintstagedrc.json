{
  "**/*.{ts,tsx,cts,mts,js,jsx,cjs,mjs}": [
    "eslint --max-warnings=0 --cache --cache-strategy content",
    "prettier --write --cache --cache-strategy content --ignore-unknown"
  ],
  "**/*.{css,scss,sass,less}": [
    "stylelint --max-warnings=0 --cache --cache-strategy content",
    "prettier --write --cache --cache-strategy content --ignore-unknown"
  ],
  "**/*.!({ts,tsx,cts,mts,js,jsx,cjs,mjs,css,scss,sass,less})": "prettier --write --cache --cache-strategy content --ignore-unknown"
}
